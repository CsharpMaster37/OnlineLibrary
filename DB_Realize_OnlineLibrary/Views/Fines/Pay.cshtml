@model DB_Realize_OnlineLibrary.Models.Fine

@{
    ViewData["Title"] = "Pay";
}
<h3>Вы уверены, что хотит оплатить штраф?</h3>
<div>
    <h4>Fine</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Book)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsMess)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsMess)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OverdueDays)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OverdueDays)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
    
    <form asp-action="Pay">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="BookId" value="@Model.BookId" />
        <input type="hidden" asp-for="ReaderId" value="@Model.ReaderId" />
        <input type="hidden" asp-for="OverdueDays" value="@Model.OverdueDays" />
        <input type="hidden" asp-for="IsMess" value="@Model.IsMess" />
        <input type="hidden" asp-for="Price" value="@Model.Price" />
        <input type="submit" value="Оплатить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться к списку</a>
    </form>
</div>
