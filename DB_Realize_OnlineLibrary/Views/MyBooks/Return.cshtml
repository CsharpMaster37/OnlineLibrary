@model DB_Realize_OnlineLibrary.Models.HistoryItem

@{
    ViewData["Title"] = "Return";
}

<h3>Вы уверены, что хотите вернуть книгу?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Book)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Book.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateofCapture)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateofCapture)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ExpectedDateOfDelivery)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExpectedDateOfDelivery)
        </dd>
    </dl>
    
    <form asp-action="Return">
        <input type="hidden" asp-for="Id"/>
        <input type="hidden" asp-for="BookId" value="@Model.BookId" />
        <input type="hidden" asp-for="ReaderId" value="@Model.ReaderId"/>
        <input type="hidden" asp-for="DateofCapture" value="@Model.DateofCapture"/>
        <input type="hidden" asp-for="ExpectedDateOfDelivery" value="@Model.ExpectedDateOfDelivery" />
        <input type="submit" value="Вернуть" class="btn btn-danger" /> |
        <a asp-action="Index">Назад к списку</a>
    </form>
</div>
